@model IEnumerable<CarLot.Models.Lot>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Section)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Section)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.LotID }) |
            @Html.ActionLink("Details", "Details", new { id=item.LotID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.LotID })
        </td>
    </tr>
}

</table>



<button type="button" onclick="ajaxCall()">
    Number of Lots?
</button>
<script>

    function ajaxCall() {

        var url = "../Lots/lotCount"

        $.getJSON(url, function (json) {

            var lotCount = json['lotCount'];


            console.log(lotCount);
            alert(lotCount);


        })
    }
</script>
